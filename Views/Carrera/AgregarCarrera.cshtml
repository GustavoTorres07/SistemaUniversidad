@model SistemaUniversidad.Models.carreraCLS

@{
    ViewBag.Title = "AgregarCiudad";
    Layout = "~/Views/Shared/_LayoutBarraMenu.cshtml";
}


<style>
    /* Agrega un estilo personalizado para aumentar el tamaño de la fuente del nombre de la ciudad */
    .nombre-ciudad {
        font-size: 18px; /* Puedes ajustar el tamaño según tus preferencias */
        /* Otros estilos si es necesario */
    }
    /* Agrega un estilo personalizado para aumentar el tamaño de la fuente del nombre de la ciudad */
    .nombre-ciudad {
        font-size: 18px; /* Puedes ajustar el tamaño según tus preferencias */
        /* Otros estilos si es necesario */
    }

    /* Cambia el color del encabezado "Agregar un Ciclo" */
    .card-header.custom-header {
        background-color: #3AA4F0; /* Cambia el color a naranja, puedes ajustarlo según tu preferencia */
    }
</style>


<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header custom-header text-white text-center">
                    <h4 class="mb-0">Agregar una Nueva Carrera</h4>
                </div>
                <div class="card-body">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-group row">
                            @Html.LabelFor(model => model.nombreCarrera, htmlAttributes: new { @class = "col-md-4 col-form-label text-md-right" })
                            <div class="col-md-8">
                                @Html.EditorFor(model => model.nombreCarrera, new { htmlAttributes = new { @class = "form-control", placeholder = "Ingrese el nombre de la carrera" } })
                                @Html.ValidationMessageFor(model => model.nombreCarrera, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <br />
                        <div class="form-group row">
                            @Html.LabelFor(model => model.cantidadCiclo, htmlAttributes: new { @class = "col-md-4 col-form-label text-md-right" })
                            <div class="col-md-8">
                                @Html.EditorFor(model => model.cantidadCiclo, new { htmlAttributes = new { @class = "form-control", placeholder = "Ingrese la cantidad de ciclos" } })
                                @Html.ValidationMessageFor(model => model.cantidadCiclo, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <br />
                        <div class="form-group row">
                            <div class="col-md-8 offset-md-4">
                                <button type="submit" class="btn btn-success">Guardar</button>
                                <a href="@Url.Action("Index")" class="btn btn-danger ml-2">Cancelar</a>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
