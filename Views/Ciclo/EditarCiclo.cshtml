@model SistemaUniversidad.Models.cicloCLS

@{
    ViewBag.Title = "Editar Ciclo";
    Layout = "~/Views/Shared/_LayoutBarraMenu.cshtml";
}

<style>
    .nombre-ciudad {
        font-size: 18px;
    }

    .card-header.custom-header {
        background-color: #3AA4F0;
    }
</style>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header custom-header text-white text-center">
                    <h4 class="mb-0">Editar Ciclo</h4>
                </div>
                <div class="card-body">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-group row">
                            <label for="nombreCiclo" class="col-md-4 col-form-label text-md-right">Nombre del Ciclo</label>
                            <div class="col-md-8">
                                @Html.EditorFor(model => model.nombreCiclo, new { htmlAttributes = new { @class = "form-control nombre-ciudad" } })
                                @Html.ValidationMessageFor(model => model.nombreCiclo, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group row">
                            <label for="carrera_id" class="col-md-4 col-form-label text-md-right">Carrera</label>
                            <div class="col-md-8">
                                @Html.DropDownList("carrera_id", (SelectList)ViewBag.Carreras, "Seleccione una carrera", new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.carrera_id, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-md-8 offset-md-4">
                                <br />
                                <button type="submit" class="btn btn-success">Guardar</button>
                                <a href="@Url.Action("Index")" class="btn btn-danger">Cancelar</a>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
