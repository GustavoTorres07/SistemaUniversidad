@model SistemaUniversidad.Models.cicloCLS

@{
    ViewBag.Title = "AgregarCiclo";
    Layout = "~/Views/Shared/_LayoutBarraMenu.cshtml";
}

<style>
    /* Agrega un estilo personalizado para aumentar el tamaño de la fuente del nombre del ciclo */
    .nombre-ciclo {
        font-size: 18px; /* Puedes ajustar el tamaño según tus preferencias */
    }

    /* Cambia el color del encabezado "Agregar un Ciclo" */
    .card-header.custom-header {
        background-color: #3AA4F0; /* Cambia el color a azul, puedes ajustarlo según tu preferencia */
    }

    /* Añade margen entre los campos de texto */
    .form-group {
        margin-bottom: 1.5rem; /* Ajusta el margen inferior según tus preferencias */
    }

    /* Añade margen al botón de cancelar */
    .btn-cancelar {
        margin-left: 1rem; /* Ajusta el margen izquierdo según tus preferencias */
    }
</style>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header custom-header text-white text-center">
                    <h4 class="mb-0">Agregar un Nuevo Ciclo</h4>
                </div>
                <div class="card-body">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-group row">
                            @Html.LabelFor(model => model.nombreCiclo, htmlAttributes: new { @class = "col-md-4 col-form-label text-md-right" })
                            <div class="col-md-8">
                                @Html.EditorFor(model => model.nombreCiclo, new { htmlAttributes = new { @class = "form-control nombre-ciclo", placeholder = "Ingrese el nombre del ciclo" } })
                                @Html.ValidationMessageFor(model => model.nombreCiclo, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group row">
                            @Html.LabelFor(model => model.carrera_id, htmlAttributes: new { @class = "col-md-4 col-form-label text-md-right" })
                            <div class="col-md-8">
                                @Html.DropDownList("carrera_id", (SelectList)ViewBag.Carreras, "Seleccione una carrera", new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.carrera_id, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-md-8 offset-md-4">
                                <button type="submit" class="btn btn-success">Guardar</button>
                                <a href="@Url.Action("Index")" class="btn btn-danger btn-cancelar">Cancelar</a>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
