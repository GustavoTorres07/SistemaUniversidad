@model SistemaUniversidad.Models.materiaCLS

@{
    ViewBag.Title = "Agregar Materia";
    Layout = "~/Views/Shared/_LayoutBarraMenu.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Agregar Materia</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.LabelFor(model => model.ciclo_id, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.ciclo_id, ViewBag.Ciclos as SelectList, "Seleccione un ciclo", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.ciclo_id, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.carrera_id, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.carrera_id, ViewBag.Carreras as SelectList, "Seleccione una carrera", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.carrera_id, "", new { @class = "text-danger" })
            </div>
        </div>

        <!-- Resto de los campos -->

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Agregar Materia" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Regresar a la Lista", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
