@model SistemaUniversidad.Models.EstudianteCLS

@{
    ViewBag.Title = "Editar Estudiante";
    Layout = "~/Views/Shared/_LayoutBarraMenu.cshtml";
}

<style>
    /* Estilo para aumentar el tamaño de la fuente del nombre del estudiante */
    .nombre-estudiante {
        font-size: 18px; /* Ajusta el tamaño según prefieras */
    }

    /* Cambia el color del encabezado "Editar Estudiante" */
    .custom-header {
        background-color: #3AA4F0; /* Cambia el color según tu preferencia */
        color: #fff; /* Color del texto del encabezado */
    }

    /* Estilo para los botones */
    .btn-success, .btn-danger {
        padding: 10px 20px; /* Tamaño del botón */
        font-size: 16px; /* Tamaño de la fuente del botón */
        border-radius: 5px; /* Bordes redondeados para los botones */
        margin: 0 10px; /* Espacio entre los botones */
    }

    .btn-success {
        background-color: #28a745; /* Color de fondo para el botón de guardar */
        border-color: #28a745; /* Color del borde del botón de guardar */
    }

        .btn-success:hover {
            background-color: #218838; /* Color de fondo cuando se pasa el mouse sobre el botón de guardar */
            border-color: #1e7e34; /* Color del borde cuando se pasa el mouse sobre el botón de guardar */
        }

    .btn-danger {
        background-color: #dc3545; /* Color de fondo para el botón de cancelar */
        border-color: #dc3545; /* Color del borde del botón de cancelar */
    }

        .btn-danger:hover {
            background-color: #c82333; /* Color de fondo cuando se pasa el mouse sobre el botón de cancelar */
            border-color: #bd2130; /* Color del borde cuando se pasa el mouse sobre el botón de cancelar */
        }

    /* Estilo para el contenedor de los botones */
    .footer-buttons {
        margin-top: 30px; /* Aumentar el margen superior para separar del contenido */
        padding: 20px; /* Espacio adicional alrededor de los botones */
        text-align: center; /* Centrar los botones horizontalmente */
        background-color: #f8f9fa; /* Color de fondo claro para el área de botones */
        border-top: 1px solid #dee2e6; /* Borde superior para definir el área de botones */
        position: relative; /* Asegura que el contenedor esté en el flujo del documento */
        z-index: 10; /* Asegura que el contenedor esté sobre otros elementos */
    }

    /* Ajustar el contenedor del formulario para que no esté afectando el footer */
    .form-container {
        padding-bottom: 100px; /* Espacio suficiente para que los botones no se tapen */
    }

    /* Estilo para los dropdowns personalizados */
    .custom-dropdown {
        width: 100%; /* Ajustar el ancho al 100% del contenedor */
    }

    /* Estilo para poner en negrita los nombres de los label */
    label {
        font-weight: bold;
    }
</style>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="container mt-5 form-container">
        <div class="row justify-content-center">
            <div class="col-md-10">
                <div class="card">
                    <div class="card-header custom-header text-center">
                        <h4 class="mb-0">Editar Estudiante</h4>
                    </div>
                    <div class="card-body">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                        <div class="row">
                            <!-- Columna izquierda -->
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="numeroLegajo">Número de Legajo</label>
                                    @Html.EditorFor(model => model.numeroLegajo, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.numeroLegajo, "", new { @class = "text-danger" })
                                </div>

                                <div class="form-group">
                                    <label for="nombreEstudiante">Nombre del Estudiante</label>
                                    @Html.EditorFor(model => model.nombreEstudiante, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.nombreEstudiante, "", new { @class = "text-danger" })
                                </div>

                                <div class="form-group">
                                    <label for="apellidoEstudiante">Apellido del Estudiante</label>
                                    @Html.EditorFor(model => model.apellidoEstudiante, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.apellidoEstudiante, "", new { @class = "text-danger" })
                                </div>

                                <div class="form-group">
                                    <label for="dniEstudiante">DNI</label>
                                    @Html.EditorFor(model => model.dniEstudiante, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.dniEstudiante, "", new { @class = "text-danger" })
                                </div>

                                <div class="form-group">
                                    <label for="edadEstudiante">Edad</label>
                                    @Html.EditorFor(model => model.edadEstudiante, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.edadEstudiante, "", new { @class = "text-danger" })
                                </div>

                                <div class="form-group">
                                    <label for="sexo_id">Sexo</label>
                                    @Html.DropDownListFor(model => model.sexo_id, (SelectList)ViewBag.Sexos, "Selecciona un sexo", new { @class = "form-control custom-dropdown" })
                                    @Html.ValidationMessageFor(model => model.sexo_id, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <!-- Columna derecha -->
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="ciudad_id">Ciudad</label>
                                    @Html.DropDownListFor(model => model.ciudad_id, (SelectList)ViewBag.Ciudades, "Selecciona una ciudad", new { @class = "form-control custom-dropdown" })
                                    @Html.ValidationMessageFor(model => model.ciudad_id, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-group">
                                    <label for="estadoEstudiante_id">Estado</label>
                                    @Html.DropDownListFor(model => model.estadoEstudiante_id, (SelectList)ViewBag.EstadosEstudiante, "Selecciona un estado", new { @class = "form-control custom-dropdown" })
                                    @Html.ValidationMessageFor(model => model.estadoEstudiante_id, "", new { @class = "text-danger" })
                                </div>

                                <div class="form-group">
                                    <label for="correoElectronico">Correo Electrónico</label>
                                    @Html.EditorFor(model => model.correoElectronico, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.correoElectronico, "", new { @class = "text-danger" })
                                </div>

                                <div class="form-group">
                                    <label for="fechaNacimientoEstudiante">Fecha de Nacimiento</label>
                                    @Html.EditorFor(model => model.fechaNacimientoEstudiante, new { htmlAttributes = new { @class = "form-control", type = "date" } })
                                    @Html.ValidationMessageFor(model => model.fechaNacimientoEstudiante, "", new { @class = "text-danger" })
                                </div>

                                <div class="form-group">
                                    <label for="carrera_id">Carrera</label>
                                    @Html.DropDownListFor(model => model.carrera_id, (SelectList)ViewBag.Carreras, "Selecciona una Carrera", new { @class = "form-control custom-dropdown" })
                                    @Html.ValidationMessageFor(model => model.carrera_id, "", new { @class = "text-danger" })
                                </div>

                                <div class="form-group">
                                    <label for="activo">Activo</label>
                                    @Html.EditorFor(model => model.activo, new { htmlAttributes = new { @class = "form-control", type = "checkbox" } })
                                    @Html.ValidationMessageFor(model => model.activo, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card-footer footer-buttons">
                        <button type="submit" class="btn btn-success">Guardar</button>
                        <a href="@Url.Action("Index")" class="btn btn-danger">Cancelar</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
