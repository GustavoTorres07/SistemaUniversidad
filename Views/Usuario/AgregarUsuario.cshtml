@model SistemaUniversidad.Models.UsuarioCLS

@{
    ViewBag.Title = "Agregar Usuario";
    Layout = "~/Views/Shared/_LayoutBarraMenu.cshtml";
}

<style>
    .custom-header {
        background-color: #3AA4F0;
        color: #fff;
    }

    .btn-success, .btn-danger {
        padding: 10px 20px;
        font-size: 16px;
        border-radius: 5px;
        margin: 0 10px;
    }

    .btn-success {
        background-color: #28a745;
        border-color: #28a745;
    }

        .btn-success:hover {
            background-color: #218838;
            border-color: #1e7e34;
        }

    .btn-danger {
        background-color: #dc3545;
        border-color: #dc3545;
    }

        .btn-danger:hover {
            background-color: #c82333;
            border-color: #bd2130;
        }

    .footer-buttons {
        margin-top: 30px;
        padding: 20px;
        text-align: center;
        background-color: #f8f9fa;
        border-top: 1px solid #dee2e6;
    }

    .form-container {
        padding-bottom: 100px;
    }

    .custom-dropdown {
        width: 100%;
    }
</style>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="container mt-5 form-container">
        <div class="row justify-content-center">
            <div class="col-md-10">
                <div class="card">
                    <div class="card-header custom-header text-center">
                        <h4 class="mb-0">Agregar Usuario</h4>
                    </div>
                    <div class="card-body">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                        <div class="row">
                            <!-- Columna izquierda -->
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="nombreUsuario">Nombre</label>
                                    @Html.EditorFor(model => model.nombreUsuario, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.nombreUsuario, "", new { @class = "text-danger" })
                                </div>

                                <div class="form-group">
                                    <label for="apellidoUsuario">Apellido</label>
                                    @Html.EditorFor(model => model.apellidoUsuario, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.apellidoUsuario, "", new { @class = "text-danger" })
                                </div>

                                <div class="form-group">
                                    <label for="edadUsuario">Edad</label>
                                    @Html.EditorFor(model => model.edadUsuario, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.edadUsuario, "", new { @class = "text-danger" })
                                </div>

                                <div class="form-group">
                                    <label for="dniUsuario">DNI</label>
                                    @Html.EditorFor(model => model.dniUsuario, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.dniUsuario, "", new { @class = "text-danger" })
                                </div>

                                <div class="form-group">
                                    <label for="ciudad_id">Ciudad</label>
                                    @Html.DropDownListFor(model => model.ciudad_id, (SelectList)ViewBag.Ciudades, "Selecciona una ciudad", new { @class = "form-control custom-dropdown" })
                                    @Html.ValidationMessageFor(model => model.ciudad_id, "", new { @class = "text-danger" })
                                </div>

                                <div class="form-group">
                                    <label for="fechaNacimientoUsuario">Fecha Nacimiento</label>
                                    @Html.EditorFor(model => model.fechaNacimientoUsuario, new { htmlAttributes = new { @class = "form-control", @type = "date" } })
                                    @Html.ValidationMessageFor(model => model.fechaNacimientoUsuario, "", new { @class = "text-danger" })
                                </div>

                                <div class="form-group">
                                    <label for="celularUsuario">Celular</label>
                                    @Html.EditorFor(model => model.celularUsuario, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.celularUsuario, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <!-- Columna derecha -->
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="emailUsuario">Email</label>
                                    @Html.EditorFor(model => model.emailUsuario, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.emailUsuario, "", new { @class = "text-danger" })
                                </div>

                                <div class="form-group">
                                    <label for="sexo_id">Sexo</label>
                                    @Html.DropDownListFor(model => model.sexo_id, (SelectList)ViewBag.Sexos, "Selecciona un sexo", new { @class = "form-control custom-dropdown" })
                                    @Html.ValidationMessageFor(model => model.sexo_id, "", new { @class = "text-danger" })
                                </div>

                                <div class="form-group">
                                    <label for="usuarioUsuario">Usuario</label>
                                    @Html.EditorFor(model => model.usuarioUsuario, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.usuarioUsuario, "", new { @class = "text-danger" })
                                </div>

                                <div class="form-group">
                                    <label for="claveUsuario">Clave</label>
                                    @Html.EditorFor(model => model.claveUsuario, new { htmlAttributes = new { @class = "form-control", @type = "password" } })
                                    @Html.ValidationMessageFor(model => model.claveUsuario, "", new { @class = "text-danger" })
                                </div>

                                <div class="form-group">
                                    <label for="rol_id">Rol</label>
                                    @Html.DropDownListFor(model => model.rol_id, (SelectList)ViewBag.Roles, "Selecciona un rol", new { @class = "form-control custom-dropdown" })
                                    @Html.ValidationMessageFor(model => model.rol_id, "", new { @class = "text-danger" })
                                </div>

                                <div class="form-group">
                                    <label for="estadoUsuario_id">Estado</label>
                                    @Html.DropDownListFor(model => model.estadoUsuario_id, (SelectList)ViewBag.Estados, "Selecciona un estado", new { @class = "form-control custom-dropdown" })
                                    @Html.ValidationMessageFor(model => model.estadoUsuario_id, "", new { @class = "text-danger" })
                                </div>

                                <div class="form-group">
                                    <label for="activo">Activo</label>
                                    @Html.CheckBoxFor(model => model.activo, new { @class = "form-check-input" })
                                    @Html.ValidationMessageFor(model => model.activo, "", new { @class = "text-danger" })
                                </div>

                            </div>
                        </div>
                    </div>
                    <div class="card-footer footer-buttons">
                        <button type="submit" class="btn btn-success">Guardar</button>
                        <a href="@Url.Action("Index", "Usuario")" class="btn btn-danger">Cancelar</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
